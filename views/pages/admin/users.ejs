<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head') %>

    <link rel="stylesheet" type="text/css" href="/css/admin-view.css" />


</head>
<body>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1>User Login</h1>
        <p>Restaurant Admin Area</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <ul id="currentUsers" class="col-sm-12 accordion">
            <%
            const users = JSON.parse(locals.users);

            for(let i = 0; i < users.length; i++) {
                let user = users[i];
            %>
            <li>
                <div class="menu-header" data-toggle="collapse" data-target="#user<%= user.user_id %>">
                    <span class="material-icons delete-user">delete</span><span class="user-name"><%= user.name %> (<span class="user-id"><%= user.user_id %></span>)</span>
                </div>

            </li>
            <%
            }
            %>
        </ul>
        <button id="addNewMenu" class="btn btn-success" data-toggle="modal" data-target="#addNewMenuModal">Add New Menu</button>

    </div>
</div>

<!-- load bootstrap js -->
<%- include('../../partials/bootstrapjs') %>
<!-- load underscore.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js"></script>
<!-- load backbone.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js"></script>
<!-- load socket.io -->
<script src="/socket.io/socket.io.js"></script>

</body>
</html>
