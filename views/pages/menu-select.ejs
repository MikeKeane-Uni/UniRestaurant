<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>

    <link rel="stylesheet" type="text/css" href="/css/admin-view.css" />


</head>
<body>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1>Restaurant</h1>
        <p>Waiter View</p>
    </div>
</div>

<main class="container">
    <div class="row justify-content-center">

        <%
        const menus = JSON.parse(locals.menus);

        for(let i = 0; i < menus.length; i++) {
            let menu = menus[i];
            let itemCount = menu.items ? menu.items.length : 0;
        %>
        <div class="col-sm-12 col-md-4">
            <div class="card no-padding">
                <div class="card-body">
                    <h5 class="card-title"><%= menu.name %></h5>
                    <p><%= itemCount %> items</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" href="/waiter/create-order/<%= menu.name %>">Select Menu</a>
                </div>
            </div>
        </div>
        <%
        }
        %>
    </div>
</main>


<!-- load bootstrap js -->
<%- include('../partials/bootstrapjs') %>
<!-- load underscore.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js"></script>
<!-- load backbone.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js"></script>
<!-- load socket.io -->
<script src="/socket.io/socket.io.js"></script>

</body>
</html>
